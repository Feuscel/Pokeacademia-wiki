		<style>
			.links-section {
				background-color: rgba(64, 64, 64, 0.7);
				width: 100vw;
			}
			.grid-container {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 20px;
				padding: 20px;
				max-width: 800px;
				margin: 0 auto;
			}

			.grid-button {
				background-color: #5865f2;
				color: white;
				padding: 20px;
				border-radius: 8px;
				text-decoration: none;
				text-align: center;
				font-weight: bold;
				transition: all 0.3s ease;
			}

			.grid-button:hover {
				background-color: #4752c4;
				transform: scale(1.05);
				box-shadow: 0 5px 15px rgba(88, 101, 242, 0.4);
			}
			.discord-button {
				display: inline-flex;
				align-items: center;
				gap: 8px;
				background-color: #5865f2;
				color: white;
				padding: 10px 20px;
				border-radius: 8px;
				text-decoration: none;
				font-weight: bold;
				transition: all 0.3s ease;
				animation: float 3s ease-in-out infinite;
			}
			.discord-button:hover {
				background-color: #4752c4;
				transform: scale(1.05);
				box-shadow: 0 5px 15px rgba(88, 101, 242, 0.4);
			}
			.discord-button svg {
				width: 24px;
				height: 24px;
				transition: transform 0.3s ease;
			}
			.discord-button:hover svg {
				transform: rotate(15deg);
			}
			@keyframes float {
				0% {
					transform: translateY(0px);
				}
				50% {
					transform: translateY(-10px);
				}
				100% {
					transform: translateY(0px);
				}
			}
			main {
				width: 100% !important;
				height: 100% !important;
				padding: 0;
				margin: 0;
			}
			section {
				height: 100vh;
				width: 100vw;
				text-align: center;
				color: white;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				min-height: 80vh;
			}

			.background {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-image: linear-gradient(
						rgba(64, 64, 64, 0.7),
						rgba(64, 64, 64, 0.7)
					),
					url(../../public/backgroud.webp);
				background-size: cover;
				background-position: center;
				background-repeat: no-repeat;
				z-index: -1;
			}
		</style>
