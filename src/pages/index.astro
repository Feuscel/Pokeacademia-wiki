---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Map from "../../public/map.svg"
import Changelogicon from "../../public/changelogicon.svg"
import Wiki from "../../public/wiki.svg"
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<section class="hero-section">
				<img src="/icon.png" alt="PokeStar Academy" />
				<p>PokeStar Academy</p>
				<p>
					Rejoignez le serveur Discord pour avoir acc√®s au serveur
					Minecraft !
				</p>
				<a
					href="https://discord.com/invite/theofrnl"
					class="discord-button"
					target="_blank"
					rel="noopener noreferrer"
				>
					<svg
						width="24"
						height="24"
						viewBox="0 0 24 24"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							fill="currentColor"
							d="M19.27 5.33C17.94 4.71 16.5 4.26 15 4a.09.09 0 0 0-.07.03c-.18.33-.39.76-.53 1.09a16.09 16.09 0 0 0-4.8 0c-.14-.34-.35-.76-.54-1.09c-.01-.02-.04-.03-.07-.03c-1.5.26-2.93.71-4.27 1.33c-.01 0-.02.01-.03.02c-2.72 4.07-3.47 8.03-3.1 11.95c0 .02.01.04.03.05c1.8 1.32 3.53 2.12 5.24 2.65c.03.01.06 0 .07-.02c.4-.55.76-1.13 1.07-1.74c.02-.04 0-.08-.04-.09c-.57-.22-1.11-.48-1.64-.78c-.04-.02-.04-.08-.01-.11c.11-.08.22-.17.33-.25c.02-.02.05-.02.07-.01c3.44 1.57 7.15 1.57 10.55 0c.02-.01.05-.01.07.01c.11.09.22.17.33.26c.04.03.04.09-.01.11c-.52.31-1.07.56-1.64.78c-.04.01-.05.06-.04.09c.32.61.68 1.19 1.07 1.74c.03.01.06.02.09.01c1.72-.53 3.45-1.33 5.25-2.65c.02-.01.03-.03.03-.05c.44-4.53-.73-8.46-3.1-11.95c-.01-.01-.02-.02-.04-.02zM8.52 14.91c-1.03 0-1.89-.95-1.89-2.12s.84-2.12 1.89-2.12c1.06 0 1.9.96 1.89 2.12c0 1.17-.84 2.12-1.89 2.12zm6.97 0c-1.03 0-1.89-.95-1.89-2.12s.84-2.12 1.89-2.12c1.06 0 1.9.96 1.89 2.12c0 1.17-.83 2.12-1.89 2.12z"
						></path>
					</svg>
					Rejoindre Discord
				</a>
			</section>
			<section class="links-section">
				<div class="grid-container">
					<a href="Wiki" class="grid-button">
						<div style="display: flex; align-items: center; justify-content: center; gap: 8px;">
							<Wiki width={24} height={24} viewBox={"0 0 24 24"} fill="none"/>
							Wiki
						</div>
					</a>
					<a href="http://109.239.157.200:26170/#pokestar_academy:230:0:-243:1460:0:0:0:0:perspective" class="grid-button">
						<div style="display: flex; align-items: center; justify-content: center; gap: 8px;">
							<Map width={24} height={24} viewBox={"0 0 24 24"} fill="none"/>
							LiveMap
						</div>
					</a>
					<a href="ChangeLog" class="grid-button">
						<div style="display: flex; align-items: center; justify-content: center; gap: 8px;">
							<Changelogicon width={24} height={24} viewBox={"0 0 128 128"} fill="currentColor"/>
							Note de patchs
						</div>
					</a>
				</div>
			</section>
		</main>
		<div class="background"></div>

		<style>
			.hero-section {
				position: relative;
				height: 100vh;
				width: 100vw;
				text-align: center;
				color: white;
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
				min-height: 80vh;
				background: linear-gradient(to bottom, transparent 80%, rgba(64, 64, 64, 0.7));
			}

			.links-section {
				position: relative;
				background-color: rgba(64, 64, 64, 0.7);
				width: 100vw;
				min-height: 20vh;
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.grid-container {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 20px;
				padding: 20px;
				max-width: 800px;
				margin: 0 auto;
			}

			.grid-button {
				background-color: grey;
				color: white;
				padding: 20px;
				border-radius: 8px;
				text-decoration: none;
				text-align: center;
				font-weight: bold;
				transition: all 0.3s ease;
			}

			.grid-button:hover {
				background-color: #4752c4;
				transform: scale(1.05);
				box-shadow: 0 5px 15px rgba(88, 101, 242, 0.4);
			}
			.discord-button {
				display: inline-flex;
				align-items: center;
				gap: 8px;
				background-color: #5865f2;
				color: white;
				padding: 10px 20px;
				border-radius: 8px;
				text-decoration: none;
				font-weight: bold;
				transition: all 0.3s ease;
				animation: float 3s ease-in-out infinite;
			}
			.discord-button:hover {
				background-color: #4752c4;
				transform: scale(1.05);
				box-shadow: 0 5px 15px rgba(88, 101, 242, 0.4);
			}
			.discord-button svg {
				width: 24px;
				height: 24px;
				transition: transform 0.3s ease;
			}
			.discord-button:hover svg {
				transform: rotate(15deg);
			}
			@keyframes float {
				0% {
					transform: translateY(0px);
				}
				50% {
					transform: translateY(-10px);
				}
				100% {
					transform: translateY(0px);
				}
			}
			main {
				width: 100% !important;
				height: 100% !important;
				padding: 0;
				margin: 0;
				overflow-x: hidden;
			}

			.background {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-image: linear-gradient(
						rgba(64, 64, 64, 0.7),
						rgba(64, 64, 64, 0.7)
					),
					url(/backgroud.webp);
				background-size: cover;
				background-position: center;
				background-repeat: no-repeat;
				z-index: -1;
			}
		</style>
	</body>
</html>
